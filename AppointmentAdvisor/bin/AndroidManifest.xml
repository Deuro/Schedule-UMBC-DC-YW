<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appointmentadvisor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Appointment Advisor"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.appointmentadvisor.MainActivity"
            android:label="Appointment Advisor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.appointmentadvisor.ScheduleActivity"
            android:label="Appointment Advisor" >
        </activity>
        <activity
            android:name="com.example.appointmentadvisor.MenuActivity"
            android:label="Appointment Advisor" >
        </activity>
        <activity
            android:name="com.example.appointmentadvisor.ConfirmActivity"
            android:label="Thank you for scheduling!" >
        </activity>
        <activity
            android:name="com.example.appointmentadvisor.CheckActivity"
            android:label="@string/title_activity_check" >
        </activity>
    </application>

</manifest>
